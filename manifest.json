{
  "manifest_version": 2,

  "name": "求職小幫手",
  "description": "讓你更加了解這家公司",
  "version": "1.3.3",

  "background" : {
      "scripts": ["background.js"]
  },
  "permissions": [
      "http://www.22kopendata.org/",
      "http://jobhelper.g0v.ronny.tw/",
      "http://www.104.com.tw/",
      "http://www.104temp.com.tw/",
      "http://www.1111.com.tw/",
      "http://www.yes123.com.tw/",
      "http://www.518.com.tw/",
      "tabs",
      "storage"
  ],
  "page_action" : {
      "default_icon" : "icon-19.png",
      "default_title" : "設定求職小幫手",
      "default_popup" : "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.104.com.tw/*",
        "http://www.104temp.com.tw/*",
	"http://www.1111.com.tw/*",
	"http://www.yes123.com.tw/*",
	"http://www.518.com.tw/*"
      ],
      "js" : ["jquery.min.js", "common.js", "22k.js", "contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  }
}
